<h4 class="notice"><%= flash[:notice] %></h4>
<div class="product_section">
    <%@products.each {|product|%>
    <div class="product_disp">
        <div class="product_info">
          <img src="<%=product[:image_url]%>" alt=""/>
          <h4><%=product[:name]%></h4>
          <h5>$<%=product[:price]%></h5>
          <a href="/products/<%=product[:id]%>" class="btn btn-info" role="button">
             <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
          </a>
          <a href="/products/<%=product[:id]%>/edit" class="btn btn-primary" role="button">
             <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          </a>
          <form class="del_button" action="/products/<%=product[:id]%>" method="post">
              <input type="hidden" name="_method" value="delete">
              <button type="submit" class="btn btn-danger" name="button">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              </button>
          </form>
        </div>
    </div>
<%}%>
</div>
